@page
@model Market.Pages.ProductsModel
@using Market.ServiceLayer
@inject Service service
@{
    ViewData["Title"] = "Products";
}

<form method="post">
    <nav class="navbar navbar-light bg-light">
            <input id="searchInput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" value="@Model.searchInput">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            <div class="btn-group" role="group" aria-label="Filters">
                <button type="button" class="btn btn-secondary">min price</button>
                <button type="button" class="btn btn-secondary">max price</button>
                <button type="button" class="btn btn-secondary">product rank</button>
                <button type="button" class="btn btn-secondary">category</button>
                <button type="button" class="btn btn-secondary">shop rank</button>
            </div>
    </nav>
    <div class="container">
        <div class="card-columns">
            @foreach(var product in Model.products)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            <div class="row">
                                <div class="col-2">Price:@product.Price</div>
                                <div class="col-2">Category:@product.Category</div>
                            </div>
                            @product.Description
                         </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <p>@Model.bottomMessage</p>
    @if(Model.products.Count == 0)
    {
        <h5>No product found</h5>
    }
</form>